#analysis
  display grid
  grid-template-columns 20% 80%
  height 100%
  .content > div:not(.error) ul
    list-style none
    padding 12px
    border-radius 3px
    background #001122
    color #eee8d5
    font-size 12px
    font-family 'Courier New', Courier, monospace
    line-height 1.5    
    li
      &.level-0
        margin-top 12px;
        font-weight bold
        color _orange
      &.level-1
        margin-top 6px
        span 
          color _blue
          text-decoration underline
      &.complete
        margin-top 12px
        color _violet
        font-weight bold

  .error
    padding 5px 10px
    border-radius 3px
    background _red
    margin-top 12px
    ul
      list-style none
      padding 0
      margin 0
  